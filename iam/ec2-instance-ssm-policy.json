{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SSMAgent",
      "Effect": "Allow",
      "Action": [
        "ssm:UpdateInstanceInformation",
        "ssm:GetDocument"
      ],
      "Resource": "*"
    },
    {
      "Sid": "S3GetDiscoveryScript",
      "Effect": "Allow",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::YOUR_DISCOVERY_BUCKET/ssm/*"
    },
    {
      "Sid": "CloudWatchAgent",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData"
      ],
      "Resource": "*"
    }
  ]
}
